<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="right"
        android:layout_marginRight="5dp"
        >

        <View
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:background="#3F51B5"
            android:id="@+id/firstLine"
            />

        <View
            android:layout_width="15dp"
            android:layout_height="80dp"
            android:background="#E91E63"
            android:id="@+id/secondLine"
            android:layout_toRightOf="@id/firstLine"
            />
        <View
            android:layout_width="15dp"
            android:layout_height="120dp"
            android:background="#00BCD4"
            android:id="@+id/thirdLine"
            android:layout_toRightOf="@id/secondLine"
            />

        <View
            android:layout_width="15dp"
            android:layout_height="160dp"
            android:background="#FFEB3B"
            android:id="@+id/fourthLine"
            android:layout_toRightOf="@id/thirdLine"
            />

        <View
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:background="#3F51B5"
            android:id="@+id/fifthLine"
            android:layout_toRightOf="@id/fourthLine"
            />

        <View
            android:layout_width="15dp"
            android:layout_height="80dp"
            android:background="#E91E63"
            android:id="@+id/sixthLine"
            android:layout_toRightOf="@id/fifthLine"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:id="@+id/ivLogo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOOT BALL MATCH"
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/tvSlogan"
            />
    </LinearLayout>




</LinearLayout>